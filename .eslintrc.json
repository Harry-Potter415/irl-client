{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["prettier", "react-app"],
  "globals": {
    "document": true,
    "localStorage": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": ["error", "unix"]
  }
}
